<Page x:Class="WPF_Mvvm_Version.Views.ContactWindows.Pages.MinaSidorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:WPF_Mvvm_Version.ViewModels.ContactWindows.Pages"
      Title="MinaSidorPage">

    <Grid Background="#1F1F1F">
        <Border Background="#353739" CornerRadius="20" Margin="20" Padding="10">
            <StackPanel Margin="20">
                <!-- Header -->
                <TextBlock Text="Mina Sidor" 
                           Foreground="#4fb5f9" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>
                <!-- User Details -->
                <TextBlock Text="{Binding UserDetails}" Foreground="White" FontSize="16" Margin="0,0,0,20" TextWrapping="Wrap"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,80,0,0">
                    <Button Content="Edit" Style="{StaticResource OrangeButtonStyle}" Width="100" Height="40" Margin="0,0,60,0"  Command="{Binding EditUserCommand}"/>
                    <Button Content="Delete" Style="{StaticResource OrangeButtonStyle}"  Width="100" Height="40" Background="#1F1F1F" Foreground="Red" BorderBrush="#FF5555" Command="{Binding DeleteUserCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
