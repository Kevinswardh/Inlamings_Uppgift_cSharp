<Page x:Class="WPF_Mvvm_Version.Views.ContactWindows.Pages.ContactPages.EditContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:WPF_Mvvm_Version.ViewModels.ContactWindows.Pages.ContactPages"
      Title="EditContactPage">

    <!-- Huvudlayout -->
    <Grid Background="#1F1F1F">
        <!-- Yttre gräns med bakgrundsfärg och rundade hörn -->
        <Border Background="#353739" CornerRadius="20" Margin="20" Padding="20">
            <StackPanel>

                <!-- Rubrik för sidan -->
                <TextBlock Text="Edit Contact" 
                           Foreground="#4fb5f9" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <!-- Inmatningsfält för kontaktinformation -->
                <StackPanel Margin="20">
                    <!-- Namn -->
                    <Label Content="Name" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#1F1F1F" 
                             Foreground="White" 
                             BorderBrush="#2A2A2A" 
                             Height="30" 
                             FontSize="14"/>

                    <!-- Efternamn -->
                    <Label Content="Lastname" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding Lastname, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#1F1F1F" 
                             Foreground="White" 
                             BorderBrush="#2A2A2A" 
                             Height="30" 
                             FontSize="14"/>

                    <!-- Telefonnummer -->
                    <Label Content="Phone Number" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#1F1F1F" 
                             Foreground="White" 
                             BorderBrush="#2A2A2A" 
                             Height="30" 
                             FontSize="14"/>

                    <!-- Adress -->
                    <Label Content="Address" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#1F1F1F" 
                             Foreground="White" 
                             BorderBrush="#2A2A2A" 
                             Height="30" 
                             FontSize="14"/>

                    <!-- E-post -->
                    <Label Content="Email" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#1F1F1F" 
                             Foreground="White" 
                             BorderBrush="#2A2A2A" 
                             Height="30" 
                             FontSize="14"/>

                    <!-- Anteckningar -->
                    <Label Content="Notes" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#1F1F1F" 
                             Foreground="White" 
                             BorderBrush="#2A2A2A" 
                             Height="60" 
                             FontSize="14" 
                             TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Knappar för att spara eller avbryta -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <!-- Spara-knapp -->
                    <Button Content="Save" 
                            Style="{StaticResource OrangeButtonStyle}" 
                            Width="100" 
                            Height="40" 
                            Margin="0,0,20,0" 
                            Command="{Binding SaveCommand}"/>
                    <!-- Avbryt-knapp -->
                    <Button Content="Cancel" 
                            Style="{StaticResource OrangeButtonStyle}" 
                            Width="100" 
                            Height="40" 
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
