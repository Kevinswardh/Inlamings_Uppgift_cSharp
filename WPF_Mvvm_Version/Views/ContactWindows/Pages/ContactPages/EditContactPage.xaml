<Page x:Class="WPF_Mvvm_Version.Views.ContactWindows.Pages.ContactPages.EditContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EditContactPage">
    <Grid Background="#1F1F1F">
        <Border Background="#273E51" CornerRadius="20" Margin="20" Padding="20">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="Edit Contact" 
                           Foreground="White" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <!-- Input Fields -->
                <StackPanel Margin="20">
                    <Label Content="Name" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Name="NameTextBox" Background="#1F1F1F" Foreground="White" BorderBrush="#2A2A2A" Height="30" FontSize="14"/>

                    <Label Content="Lastname" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Name="LastNameTextBox" Background="#1F1F1F" Foreground="White" BorderBrush="#2A2A2A" Height="30" FontSize="14"/>

                    <Label Content="Phone Number" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Name="PhoneNumberTextBox" Background="#1F1F1F" Foreground="White" BorderBrush="#2A2A2A" Height="30" FontSize="14"/>

                    <Label Content="Address" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Name="AddressTextBox" Background="#1F1F1F" Foreground="White" BorderBrush="#2A2A2A" Height="30" FontSize="14"/>

                    <Label Content="Email" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Name="EmailTextBox" Background="#1F1F1F" Foreground="White" BorderBrush="#2A2A2A" Height="30" FontSize="14"/>

                    <Label Content="Notes" Foreground="White" Margin="0,5,0,2"/>
                    <TextBox Name="NotesTextBox" Background="#1F1F1F" Foreground="White" BorderBrush="#2A2A2A" Height="60" FontSize="14" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Save and Cancel Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Save" Style="{StaticResource OrangeButtonStyle}" Width="100" Height="40" Margin="0,0,20,0" Click="SaveButton_Click"/>
                    <Button Content="Cancel" Style="{StaticResource OrangeButtonStyle}" Width="100" Height="40" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
