<Page x:Class="WPF_Mvvm_Version.Views.ContactWindows.Pages.ContactPages.AddFavoritePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddFavoritePage">
    <Grid Background="#1f1f1f">
        <Border Background="#273E51" CornerRadius="20" Margin="20" Padding="10">
            <StackPanel Margin="20">
                <!-- Header -->
                <TextBlock Text="Add Favorite"
                           Foreground="White"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Input Fields -->
                <StackPanel>
                    <TextBlock Text="Name:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Background="#1f1f1f" Foreground="White" BorderBrush="#2A2A2A" Margin="0,0,0,10"/>

                    <TextBlock Text="Lastname:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Lastname, UpdateSourceTrigger=PropertyChanged}" Background="#1f1f1f" Foreground="White" BorderBrush="#2A2A2A" Margin="0,0,0,10"/>

                    <TextBlock Text="Phone Number:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Background="#1f1f1f" Foreground="White" BorderBrush="#2A2A2A" Margin="0,0,0,10"/>

                    <TextBlock Text="Address:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Background="#1f1f1f" Foreground="White" BorderBrush="#2A2A2A" Margin="0,0,0,10"/>

                    <TextBlock Text="Email:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Background="#1f1f1f" Foreground="White" BorderBrush="#2A2A2A" Margin="0,0,0,10"/>

                    <TextBlock Text="Notes:" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" Background="#1f1f1f" Foreground="White" BorderBrush="#2A2A2A" Margin="0,0,0,10" AcceptsReturn="True" Height="60"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Save" Style="{StaticResource OrangeButtonStyle}" Width="100" Height="40" Margin="0,0,20,0" BorderBrush="#273E51" Command="{Binding SaveCommand}"/>
                    <Button Content="Cancel" Style="{StaticResource OrangeButtonStyle}"  Width="100" Height="40"  Command="{Binding CancelCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
