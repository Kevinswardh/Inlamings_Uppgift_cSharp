<Page x:Class="WPF_Mvvm_Version.Views.HomePage.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:WPF_Mvvm_Version.ViewModels.MainWindows.HomePage"
      Title="HomePage">

    <Page.DataContext>
        <!-- Sätt ViewModel för HomePage -->
        <vm:HomePageViewModel />
    </Page.DataContext>

    <Grid Background="#1f1f1f" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Homepage" Foreground="White" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,60"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Bind knapparna till kommandon -->
                <Button Content="Login" Width="100" Height="40" Margin="0,0,30,0" Command="{Binding LoginCommand}"/>
                <Button Content="Register" Width="100" Height="40" Command="{Binding RegisterCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
